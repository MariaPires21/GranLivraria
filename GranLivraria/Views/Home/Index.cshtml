@{
    ViewData["Title"] = "GranLivraria - Sua Livraria Digital";
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <section class="bg-light-custom py-5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold text-dark mb-4">
                        Descubra Mundos <span class="text-accent">Incríveis</span> através dos Livros
                    </h1>
                    <p class="lead mb-4 text-muted">
                        Explore nosso catálogo diversificado e encontre sua próxima grande leitura.
                        De clássicos atemporais às últimas novidades, temos o livro perfeito para você.
                    </p>
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <a class="btn btn-primary btn-lg" asp-controller="Livros" asp-action="Index">
                            <i class="fas fa-book-open me-2"></i>Explorar Catálogo
                        </a>
                        <a class="btn btn-outline-primary btn-lg" asp-controller="Livros" asp-action="Create">
                            <i class="fas fa-plus me-2"></i>Adicionar Livro
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="h1 fw-bold text-dark">Por que escolher nossa livraria?</h2>
                    <p class="lead text-muted">Oferecemos a melhor experiência para amantes de livros</p>
                </div>
            </div>
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-search fa-3x text-accent mb-3"></i>
                            <h5 class="card-title text-dark">Busca Inteligente</h5>
                            <p class="card-text text-muted">Encontre rapidamente os livros que procura com nossa busca
                                avançada</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-tags fa-3x text-accent mb-3"></i>
                            <h5 class="card-title text-dark">Catálogo Organizado</h5>
                            <p class="card-text text-muted">Livros categorizados por gênero para fácil navegação</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-plus-circle fa-3x text-accent mb-3"></i>
                            <h5 class="card-title text-dark">Gestão Simples</h5>
                            <p class="card-text text-muted">Adicione e gerencie livros de forma intuitiva e rápida</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>