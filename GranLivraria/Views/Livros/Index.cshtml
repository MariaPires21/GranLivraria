@model IEnumerable<GranLivraria.Models.Livro>

@{
    ViewData["Title"] = "Catálogo de Livros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title">Catálogo de Livros</h1>
    <a asp-action="Create" class="btn btn-primary d-none d-md-inline-flex">
        <i class="fas fa-plus me-2"></i>Adicionar Livro
    </a>
    <a asp-action="Create" class="btn btn-primary d-md-none" title="Adicionar Livro">
        <i class="fas fa-plus"></i>
    </a>
</div>

@if (!Model.Any())
{
    <div class="card text-center py-5">
        <div class="card-body">
            <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
            <h3 class="text-dark">Nenhum livro encontrado</h3>
            <p class="text-muted">Comece adicionando o primeiro livro ao catálogo</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Adicionar Primeiro Livro
            </a>
        </div>
    </div>
}
else
{
    <div class="books-grid">
        @foreach (var item in Model)
        {
            <div class="card book-card h-100">
                <!-- Imagem da Capa -->
                <div class="card-img-container">
                    <img src="@item.ImagemUrl" class="card-img-top" alt="Capa do livro @item.Titulo"
                        onerror="this.src='/images/livros/capa-padrao.jpg'">
                </div>

                <div class="card-body d-flex flex-column">
                    <!-- Gênero -->
                    <div class="mb-2">
                        <span class="book-genre">@item.Genero?.Nome</span>
                    </div>

                    <!-- Título -->
                    <h5 class="card-title">@item.Titulo</h5>

                    <!-- Informações de Preço e Estoque -->
                    <div class="book-info mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="book-price">R$ @item.Preco.ToString("F2")</span>
                            <span class="book-stock">
                                @item.Estoque @(item.Estoque == 1 ? "unidade" : "unidades")
                            </span>
                        </div>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="btn-group w-100" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Ver Detalhes">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Editar Livro">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir Livro">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}