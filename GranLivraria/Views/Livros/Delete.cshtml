@model GranLivraria.Models.Livro

@{
    ViewData["Title"] = "Remover Tomo dos Arquivos";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="book-card" style="border-left-color: #8B0000;">
            <h1 class="page-title text-center" style="color: #8B0000;">
                <i class="fas fa-trash-alt me-2"></i>Remover Tomo
            </h1>

            <div class="alert alert-danger text-center mt-4">
                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                <h4 style="color: #8B0000;">Atenção, Guardião dos Arquivos!</h4>
                <p class="mb-0">Esta ação é <strong>permanente</strong>. Tem certeza que deseja remover este tomo dos
                    arquivos?</p>
            </div>

            <div class="book-card mt-4" style="background: rgba(139, 0, 0, 0.1);">
                <h4 style="color: #8B0000; text-align: center;">@Html.DisplayFor(model => model.Titulo)</h4>
                <div class="row text-center mt-3">
                    <div class="col-md-4">
                        <strong style="color: #8B0000;">Gênero</strong><br>
                        <span class="book-stock">@Html.DisplayFor(model => model.Genero.Nome)</span>
                    </div>
                    <div class="col-md-4">
                        <strong style="color: #8B0000;">Valor</strong><br>
                        <span class="book-price">@Html.DisplayFor(model => model.Preco)</span>
                    </div>
                    <div class="col-md-4">
                        <strong style="color: #8B0000;">Estoque</strong><br>
                        <span class="badge" style="background: #8B0000; color: #F5E6CA; padding: 8px 12px;">
                            @Html.DisplayFor(model => model.Estoque) unidades
                        </span>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="text-center mt-5">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg me-3">
                    <i class="fas fa-trash-alt me-2"></i>Sim, Remover Permanentemente
                </button>
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Cancelar e Voltar
                </a>
            </form>
        </div>
    </div>
</div>