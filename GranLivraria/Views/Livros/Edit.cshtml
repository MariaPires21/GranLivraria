@model GranLivraria.Models.Livro

@{
    ViewData["Title"] = "Reescrever Tomo";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="book-card">
            <h1 class="page-title text-center">
                <i class="fas fa-edit me-2"></i>Reescrever Tomo
            </h1>
            
            <form asp-action="Edit" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-4">
                    <label asp-for="Titulo" class="form-label" style="font-weight: bold; color: #8B0000;">
                        <i class="fas fa-heading me-2"></i>Título do Tomo
                    </label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="GeneroId" class="form-label" style="font-weight: bold; color: #8B0000;">
                        <i class="fas fa-tags me-2"></i>Gênero do Conhecimento
                    </label>
                    <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId">
                        <option value="">-- Selecione o Gênero --</option>
                    </select>
                    <span asp-validation-for="GeneroId" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="Preco" class="form-label" style="font-weight: bold; color: #8B0000;">
                                <i class="fas fa-coins me-2"></i>Valor em Ouro
                            </label>
                            <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="Estoque" class="form-label" style="font-weight: bold; color: #8B0000;">
                                <i class="fas fa-cubes me-2"></i>Unidades no Arquivo
                            </label>
                            <input asp-for="Estoque" class="form-control" type="number" />
                            <span asp-validation-for="Estoque" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group text-center mt-5">
                    <button type="submit" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-save me-2"></i>Atualizar Arquivo
                    </button>
                    <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Voltar ao Catálogo
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>